---
/**
 * Max Ghenis Icon System
 *
 * Editorial Architect style - clean geometric lines with optional duotone fills.
 * Icons use current color and inherit from parent for easy theming.
 *
 * Usage:
 *   <Icon name="chart" size={24} duotone />
 *   <Icon name="robot" class="text-amber" />
 */

interface Props {
  name:
    | 'chart'
    | 'robot'
    | 'laptop'
    | 'globe'
    | 'python'
    | 'dashboard'
    | 'ram'
    | 'code'
    | 'document'
    | 'lightning'
    | 'target'
    | 'search'
    | 'link'
    | 'mail'
    | 'arrow-right'
    | 'external'
    | 'download'
    | 'check'
    | 'x'
    | 'warning'
    | 'package'
    | 'terminal'
    | 'cpu'
    | 'database'
    | 'layers'
    | 'grid'
    | 'pen';
  size?: number;
  duotone?: boolean;
  class?: string;
}

const { name, size = 24, duotone = false, class: className = '' } = Astro.props;

const strokeWidth = 1.5;
---

<svg
  viewBox="0 0 24 24"
  width={size}
  height={size}
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class:list={['mg-icon', `mg-icon-${name}`, className]}
  aria-hidden="true"
>
  {/* Chart/Analytics - Bar chart with ascending trend */}
  {name === 'chart' && (
    <>
      {duotone && <rect x="3" y="3" width="18" height="18" rx="2" fill="currentColor" opacity="0.12" />}
      <path d="M3 3v18h18" />
      <rect x="7" y="10" width="3" height="8" rx="0.5" fill={duotone ? 'currentColor' : 'none'} />
      <rect x="12" y="6" width="3" height="12" rx="0.5" fill={duotone ? 'currentColor' : 'none'} />
      <rect x="17" y="13" width="3" height="5" rx="0.5" fill={duotone ? 'currentColor' : 'none'} />
    </>
  )}

  {/* Robot/AI - Friendly robot face */}
  {name === 'robot' && (
    <>
      {duotone && <rect x="4" y="8" width="16" height="12" rx="2" fill="currentColor" opacity="0.12" />}
      <rect x="4" y="8" width="16" height="12" rx="2" />
      <path d="M12 3v4" />
      <circle cx="12" cy="3" r="1" fill="currentColor" />
      <circle cx="9" cy="13" r="1.5" fill={duotone ? 'currentColor' : 'none'} />
      <circle cx="15" cy="13" r="1.5" fill={duotone ? 'currentColor' : 'none'} />
      <path d="M9 17h6" />
      <path d="M2 12h2M20 12h2" />
    </>
  )}

  {/* Laptop/VS Code - Laptop with code brackets */}
  {name === 'laptop' && (
    <>
      {duotone && <rect x="3" y="4" width="18" height="12" rx="2" fill="currentColor" opacity="0.12" />}
      <rect x="3" y="4" width="18" height="12" rx="2" />
      <path d="M2 20h20" />
      <path d="M9 8l-2 3 2 3M15 8l2 3-2 3" />
    </>
  )}

  {/* Globe/Web - Earth with latitude lines */}
  {name === 'globe' && (
    <>
      {duotone && <circle cx="12" cy="12" r="10" fill="currentColor" opacity="0.12" />}
      <circle cx="12" cy="12" r="10" />
      <path d="M2 12h20" />
      <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
    </>
  )}

  {/* Python - Stylized snake */}
  {name === 'python' && (
    <>
      {duotone && <path d="M12 2C8 2 6 4 6 6v2h6v1H5c-2 0-3 2-3 4s1 4 3 4h2v-2c0-2 1-4 4-4h4c2 0 3-1 3-3V6c0-2-2-4-6-4z" fill="currentColor" opacity="0.12" />}
      <path d="M12 2C8 2 6 4 6 6v2h6v1H5c-2 0-3 2-3 4s1 4 3 4h2v-2c0-2 1-4 4-4h4c2 0 3-1 3-3V6c0-2-2-4-6-4z" />
      <path d="M12 22c4 0 6-2 6-4v-2h-6v-1h7c2 0 3-2 3-4s-1-4-3-4h-2v2c0 2-1 4-4 4h-4c-2 0-3 1-3 3v2c0 2 2 4 6 4z" />
      <circle cx="9" cy="5" r="0.75" fill="currentColor" />
      <circle cx="15" cy="19" r="0.75" fill="currentColor" />
    </>
  )}

  {/* Dashboard/Controls - Grid with sliders */}
  {name === 'dashboard' && (
    <>
      {duotone && <rect x="3" y="3" width="18" height="18" rx="2" fill="currentColor" opacity="0.12" />}
      <rect x="3" y="3" width="7" height="7" rx="1" />
      <rect x="14" y="3" width="7" height="7" rx="1" />
      <rect x="3" y="14" width="7" height="7" rx="1" />
      <rect x="14" y="14" width="7" height="7" rx="1" />
      <circle cx="6.5" cy="6.5" r="1.5" fill={duotone ? 'currentColor' : 'none'} />
      <circle cx="17.5" cy="6.5" r="1.5" fill={duotone ? 'currentColor' : 'none'} />
    </>
  )}

  {/* RAM - Memory chip */}
  {name === 'ram' && (
    <>
      {duotone && <rect x="2" y="6" width="20" height="12" rx="2" fill="currentColor" opacity="0.12" />}
      <rect x="2" y="6" width="20" height="12" rx="2" />
      <path d="M6 2v4M10 2v4M14 2v4M18 2v4" />
      <path d="M6 18v4M10 18v4M14 18v4M18 18v4" />
      <rect x="5" y="9" width="4" height="6" rx="0.5" fill={duotone ? 'currentColor' : 'none'} />
      <rect x="10" y="9" width="4" height="6" rx="0.5" fill={duotone ? 'currentColor' : 'none'} />
      <rect x="15" y="9" width="4" height="6" rx="0.5" fill={duotone ? 'currentColor' : 'none'} />
    </>
  )}

  {/* Code - Angle brackets */}
  {name === 'code' && (
    <>
      {duotone && <rect x="3" y="3" width="18" height="18" rx="2" fill="currentColor" opacity="0.12" />}
      <polyline points="16 18 22 12 16 6" />
      <polyline points="8 6 2 12 8 18" />
    </>
  )}

  {/* Document - Page with lines */}
  {name === 'document' && (
    <>
      {duotone && <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" fill="currentColor" opacity="0.12" />}
      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
      <polyline points="14 2 14 8 20 8" />
      <line x1="8" y1="13" x2="16" y2="13" />
      <line x1="8" y1="17" x2="16" y2="17" />
    </>
  )}

  {/* Lightning - Energy/speed */}
  {name === 'lightning' && (
    <>
      {duotone && <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2" fill="currentColor" opacity="0.12" />}
      <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2" fill={duotone ? 'none' : 'none'} />
    </>
  )}

  {/* Target - Bullseye */}
  {name === 'target' && (
    <>
      {duotone && <circle cx="12" cy="12" r="10" fill="currentColor" opacity="0.12" />}
      <circle cx="12" cy="12" r="10" />
      <circle cx="12" cy="12" r="6" />
      <circle cx="12" cy="12" r="2" fill={duotone ? 'currentColor' : 'none'} />
    </>
  )}

  {/* Search - Magnifying glass */}
  {name === 'search' && (
    <>
      {duotone && <circle cx="11" cy="11" r="8" fill="currentColor" opacity="0.12" />}
      <circle cx="11" cy="11" r="8" />
      <path d="M21 21l-4.35-4.35" />
    </>
  )}

  {/* Link - Chain links */}
  {name === 'link' && (
    <>
      {duotone && (
        <>
          <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" fill="currentColor" opacity="0.12" />
          <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" fill="currentColor" opacity="0.12" />
        </>
      )}
      <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
      <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
    </>
  )}

  {/* Mail - Envelope */}
  {name === 'mail' && (
    <>
      {duotone && <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" fill="currentColor" opacity="0.12" />}
      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
      <polyline points="22 6 12 13 2 6" />
    </>
  )}

  {/* Arrow Right */}
  {name === 'arrow-right' && (
    <>
      <path d="M5 12h14" />
      <path d="M12 5l7 7-7 7" />
    </>
  )}

  {/* External Link */}
  {name === 'external' && (
    <>
      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
      <polyline points="15 3 21 3 21 9" />
      <line x1="10" y1="14" x2="21" y2="3" />
    </>
  )}

  {/* Download */}
  {name === 'download' && (
    <>
      {duotone && <rect x="3" y="15" width="18" height="6" rx="1" fill="currentColor" opacity="0.12" />}
      <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
      <polyline points="7 10 12 15 17 10" />
      <line x1="12" y1="15" x2="12" y2="3" />
    </>
  )}

  {/* Check */}
  {name === 'check' && (
    <>
      {duotone && <circle cx="12" cy="12" r="10" fill="currentColor" opacity="0.12" />}
      <polyline points="20 6 9 17 4 12" />
    </>
  )}

  {/* X/Close */}
  {name === 'x' && (
    <>
      {duotone && <circle cx="12" cy="12" r="10" fill="currentColor" opacity="0.12" />}
      <line x1="18" y1="6" x2="6" y2="18" />
      <line x1="6" y1="6" x2="18" y2="18" />
    </>
  )}

  {/* Warning */}
  {name === 'warning' && (
    <>
      {duotone && <path d="M12 2L2 22h20L12 2z" fill="currentColor" opacity="0.12" />}
      <path d="M12 2L2 22h20L12 2z" />
      <line x1="12" y1="9" x2="12" y2="13" />
      <line x1="12" y1="17" x2="12.01" y2="17" />
    </>
  )}

  {/* Package */}
  {name === 'package' && (
    <>
      {duotone && <path d="M16.5 9.4l-9-5.19M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" fill="currentColor" opacity="0.12" />}
      <line x1="16.5" y1="9.4" x2="7.5" y2="4.21" />
      <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" />
      <polyline points="3.27 6.96 12 12.01 20.73 6.96" />
      <line x1="12" y1="22.08" x2="12" y2="12" />
    </>
  )}

  {/* Terminal */}
  {name === 'terminal' && (
    <>
      {duotone && <rect x="3" y="3" width="18" height="18" rx="2" fill="currentColor" opacity="0.12" />}
      <rect x="3" y="3" width="18" height="18" rx="2" />
      <polyline points="7 10 10 13 7 16" />
      <line x1="13" y1="16" x2="17" y2="16" />
    </>
  )}

  {/* CPU */}
  {name === 'cpu' && (
    <>
      {duotone && <rect x="4" y="4" width="16" height="16" rx="2" fill="currentColor" opacity="0.12" />}
      <rect x="4" y="4" width="16" height="16" rx="2" />
      <rect x="9" y="9" width="6" height="6" fill={duotone ? 'currentColor' : 'none'} />
      <path d="M9 1v3M15 1v3M9 20v3M15 20v3M20 9h3M20 14h3M1 9h3M1 14h3" />
    </>
  )}

  {/* Database */}
  {name === 'database' && (
    <>
      {duotone && <ellipse cx="12" cy="5" rx="9" ry="3" fill="currentColor" opacity="0.12" />}
      <ellipse cx="12" cy="5" rx="9" ry="3" />
      <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3" />
      <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5" />
    </>
  )}

  {/* Layers */}
  {name === 'layers' && (
    <>
      {duotone && <polygon points="12 2 2 7 12 12 22 7 12 2" fill="currentColor" opacity="0.12" />}
      <polygon points="12 2 2 7 12 12 22 7 12 2" />
      <polyline points="2 17 12 22 22 17" />
      <polyline points="2 12 12 17 22 12" />
    </>
  )}

  {/* Grid */}
  {name === 'grid' && (
    <>
      {duotone && <rect x="3" y="3" width="18" height="18" rx="2" fill="currentColor" opacity="0.12" />}
      <rect x="3" y="3" width="7" height="7" />
      <rect x="14" y="3" width="7" height="7" />
      <rect x="14" y="14" width="7" height="7" />
      <rect x="3" y="14" width="7" height="7" />
    </>
  )}

  {/* Pen */}
  {name === 'pen' && (
    <>
      {duotone && <path d="M12 20h9M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z" fill="currentColor" opacity="0.12" />}
      <path d="M12 20h9" />
      <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z" />
    </>
  )}
</svg>

<style>
  .mg-icon {
    display: inline-block;
    vertical-align: middle;
    flex-shrink: 0;
  }
</style>
