---
import { SITE_TITLE, SOCIAL_LINKS } from '../consts';
---

<header>
	<nav>
		<a href="/" class="logo-link">
			<span class="logo-text">{SITE_TITLE}</span>
		</a>

		<div class="nav-links">
			<a href="/" class="nav-link">Home</a>
			<a href="/blog" class="nav-link">Writing</a>
			<a href="/research" class="nav-link">Research</a>
			<a href="/cv" class="nav-link">CV</a>
		</div>

		<div class="social-links">
			<a href={SOCIAL_LINKS.twitter} target="_blank" rel="noopener" aria-label="X (Twitter)">
				<svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
					<path fill="currentColor" d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
				</svg>
			</a>
			<a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener" aria-label="LinkedIn">
