    padding: 2rem;
    border-radius: var(--radius-lg);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .gradient-card.navy-gradient {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: white;
  }

  .gradient-card.amber-glow {
    background: rgba(245, 158, 11, 0.15);
    border: 1px solid rgba(245, 158, 11, 0.3);
  }

  .gradient-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .gradient-card code {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    opacity: 0.7;
  }

  /* Typography */
  .type-showcase {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .type-row {
    display: grid;
    grid-template-columns: 100px 1fr auto;
    align-items: center;
    gap: 2rem;
    padding: 1.5rem;
    background: white;
    border: 1px solid rgba(15, 23, 42, 0.08);
    border-radius: var(--radius-lg);
  }

  .type-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
  }

  .type-sample {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .sample-text {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .sample-full {
    font-size: 1rem;
    color: var(--text-secondary);
  }

  .display-font .sample-text,
  .display-font .sample-full {
    font-family: 'Playfair Display', Georgia, serif;
  }

  .body-font .sample-text,
  .body-font .sample-full {
    font-family: 'Source Sans 3', sans-serif;
  }

  .mono-font .sample-text,
  .mono-font .sample-full {
    font-family: 'JetBrains Mono', monospace;
  }

  .type-stack {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-muted);
    text-align: right;
    white-space: nowrap;
  }

  .type-scale h3 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .scale-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .scale-row {
    display: grid;
    grid-template-columns: 60px 80px 1fr;
    align-items: baseline;
    gap: 1rem;
  }

  .scale-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .scale-sample {
    font-family: 'Playfair Display', Georgia, serif;
    font-weight: 600;
    color: var(--text-primary);
  }

  .scale-value {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
