  .radius-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: var(--text-primary);
  }

  .radius-value {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  /* Icons */
  .icon-description {
    margin-bottom: 1.5rem;
    color: var(--text-secondary);
  }

  .icon-description code {
    font-family: 'JetBrains Mono', monospace;
    padding: 0.125rem 0.375rem;
