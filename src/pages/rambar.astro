---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Icon from '../components/Icons.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`RAMBar | ${SITE_TITLE}`} description="Native macOS menu bar app for monitoring RAM with developer-focused breakdowns for Claude Code, VS Code, Chrome, and Python" image="/og/rambar.png" />
	</head>
	<body>
		<Header />
		<main>
			<header class="page-header">
				<div class="app-icon">
					<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<rect x="2" y="2" width="20" height="8" rx="2"></rect>
						<rect x="2" y="14" width="20" height="8" rx="2"></rect>
						<line x1="6" y1="6" x2="6.01" y2="6"></line>
						<line x1="6" y1="18" x2="6.01" y2="18"></line>
					</svg>
				</div>
				<h1>RAMBar</h1>
				<p class="page-description">Native macOS menu bar app for monitoring RAM with developer-focused breakdowns for Claude Code, VS Code, Chrome, and Python.</p>
				<div class="header-actions">
					<a href="https://github.com/MaxGhenis/rambar/releases/latest/download/RAMBar.dmg" class="download-btn">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
							<polyline points="7 10 12 15 17 10"></polyline>
							<line x1="12" y1="15" x2="12" y2="3"></line>
						</svg>
						Download for macOS
					</a>
					<a href="https://github.com/MaxGhenis/rambar" class="github-btn">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
						View Source
					</a>
				</div>
			</header>

			<section class="features">
				<h2>Features</h2>
				<div class="feature-grid">
					<div class="feature-card">
						<div class="feature-icon">
							<Icon name="chart" size={32} duotone />
						</div>
						<h3>Menu bar widget</h3>
						<p>Always-visible RAM percentage with color-coded status (green/yellow/red)</p>
					</div>
					<div class="feature-card">
						<div class="feature-icon">
							<Icon name="robot" size={32} duotone />
						</div>
						<h3>Claude Code sessions</h3>
						<p>Track main sessions vs subagents with project names and memory per session</p>
					</div>
					<div class="feature-card">
						<div class="feature-icon">
							<Icon name="laptop" size={32} duotone />
						</div>
						<h3>VS Code workspaces</h3>
						<p>Memory breakdown by workspace with crash detection alerts</p>
					</div>
					<div class="feature-card">
						<div class="feature-icon">
							<Icon name="globe" size={32} duotone />
						</div>
						<h3>Chrome tabs</h3>
						<p>Top memory-consuming tabs to find what's eating your RAM</p>
					</div>
					<div class="feature-card">
						<div class="feature-icon">
							<Icon name="python" size={32} duotone />
						</div>
						<h3>Python processes</h3>
						<p>Track Jupyter, scripts, and MCP servers with memory usage</p>
					</div>
					<div class="feature-card">
						<div class="feature-icon">
							<Icon name="dashboard" size={32} duotone />
						</div>
						<h3>Full dashboard</h3>
						<p>Expand to retro-futuristic control room view with all details</p>
					</div>
				</div>
			</section>

			<section class="install">
				<h2>Installation</h2>
				<div class="install-steps">
					<div class="step">
						<span class="step-number">1</span>
						<div class="step-content">
							<h3>Download</h3>
							<p>Download <code>RAMBar.dmg</code> from the link above</p>
						</div>
					</div>
					<div class="step">
						<span class="step-number">2</span>
						<div class="step-content">
							<h3>Install</h3>
							<p>Open the DMG and drag RAMBar to Applications</p>
						</div>
					</div>
					<div class="step">
						<span class="step-number">3</span>
						<div class="step-content">
							<h3>First launch</h3>
							<p>Right-click → Open to bypass Gatekeeper (unsigned app)</p>
						</div>
					</div>
				</div>
			</section>

			<section class="requirements">
				<h2>Requirements</h2>
				<ul>
					<li>macOS 14.0 (Sonoma) or later</li>
					<li>Automation permission for Chrome/VS Code tab enumeration (optional)</li>
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 900px;
	}

	.page-header {
		text-align: center;
		margin-bottom: 3rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid rgba(15, 23, 42, 0.08);
	}

	.app-icon {
		width: 80px;
		height: 80px;
		margin: 0 auto 1.5rem;
		background: linear-gradient(135deg, #12121a 0%, #1a1a24 100%);
		border: 2px solid #00ffd5;
		border-radius: 16px;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 0 30px rgba(0, 255, 213, 0.2);
	}

	.app-icon svg {
		width: 40px;
		height: 40px;
		color: #00ffd5;
	}

	.page-header h1 {
		font-size: 3rem;
		margin-bottom: 0.75rem;
	}

	.page-description {
		font-size: 1.25rem;
		color: var(--text-secondary);
		max-width: 600px;
		margin: 0 auto 2rem;
	}

	.header-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.download-btn, .github-btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.875rem 1.5rem;
		border-radius: var(--radius-lg);
		text-decoration: none;
		font-weight: 600;
		font-size: 1rem;
		transition: all var(--duration-fast) var(--ease-out);
	}

	.download-btn {
		background: #00ffd5;
		color: #0a0a0f;
	}

	.download-btn:hover {
		background: #00c4a7;
		transform: translateY(-2px);
		box-shadow: 0 8px 30px rgba(0, 255, 213, 0.3);
	}

	.github-btn {
		background: var(--ink);
		color: white;
	}

	.github-btn:hover {
		background: var(--ink-soft);
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	section {
		margin-bottom: 3rem;
	}

	section h2 {
		font-size: 1.75rem;
		margin-bottom: 1.5rem;
	}

	.feature-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: 1.25rem;
	}

	.feature-card {
		background: white;
		border: 1px solid rgba(15, 23, 42, 0.08);
		border-radius: var(--radius-lg);
		padding: 1.5rem;
		transition: all var(--duration-fast) var(--ease-out);
	}

	.feature-card:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.feature-icon {
		width: 56px;
		height: 56px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--amber-glow);
		border-radius: var(--radius-lg);
		margin-bottom: 1rem;
		color: var(--amber-dark);
		transition: all var(--duration-fast) var(--ease-out);
	}

	.feature-card:hover .feature-icon {
		background: var(--amber);
		color: var(--ink);
		transform: scale(1.05);
	}

	.feature-card h3 {
		font-size: 1.125rem;
		margin-bottom: 0.5rem;
	}

	.feature-card p {
		font-size: 0.9375rem;
		color: var(--text-secondary);
		line-height: 1.5;
	}

	.install-steps {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.step {
		display: flex;
		align-items: flex-start;
		gap: 1.25rem;
	}

	.step-number {
		width: 36px;
		height: 36px;
		background: #00ffd5;
		color: #0a0a0f;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-weight: 700;
		flex-shrink: 0;
	}

	.step-content h3 {
		font-size: 1.125rem;
		margin-bottom: 0.25rem;
	}

	.step-content p {
		color: var(--text-secondary);
	}

	.step-content code {
		background: rgba(0, 255, 213, 0.1);
		padding: 0.125rem 0.375rem;
		border-radius: 4px;
		font-size: 0.875rem;
	}

	.requirements ul {
		list-style: none;
		padding: 0;
	}

	.requirements li {
		padding: 0.5rem 0;
		padding-left: 1.5rem;
		position: relative;
		color: var(--text-secondary);
	}

	.requirements li::before {
		content: "✓";
		position: absolute;
		left: 0;
		color: #00ffd5;
		font-weight: bold;
	}

	@media (max-width: 768px) {
		.page-header h1 {
			font-size: 2.5rem;
		}

		.page-description {
			font-size: 1.125rem;
		}
	}
</style>
