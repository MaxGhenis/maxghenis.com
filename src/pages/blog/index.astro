---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const featuredPost = posts[0];
const otherPosts = posts.slice(1);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Writing | ${SITE_TITLE}`} description="Thoughts on policy, technology, economics, and building tools for better governance." />
	</head>
	<body>
		<Header />
		<main>
			<header class="page-header">
				<h1>Writing</h1>
				<p class="page-description">Thoughts on policy, technology, economics, and building tools for better governance.</p>
			</header>

			{featuredPost && (
				<section class="featured-section">
					<a href={`/blog/${featuredPost.id}/`} class="featured-post">
						{featuredPost.data.heroImage && (
							<div class="featured-image">
								<Image
									width={800}
									height={400}
									src={featuredPost.data.heroImage}
									alt=""
								/>
							</div>
						)}
						<div class="featured-content">
							<span class="featured-badge">Latest</span>
							<h2>{featuredPost.data.title}</h2>
							<p class="featured-date">
								<FormattedDate date={featuredPost.data.pubDate} />
							</p>
							<p class="featured-description">{featuredPost.data.description}</p>
							<span class="read-more">Read article</span>
						</div>
					</a>
				</section>
			)}

			<section class="posts-section">
				<div class="posts-grid">
					{otherPosts.map((post) => (
						<a href={`/blog/${post.id}/`} class="post-card">
							{post.data.heroImage && (
								<div class="post-image">
									<Image
										width={400}
										height={200}
										src={post.data.heroImage}
										alt=""
									/>
								</div>
							)}
							<div class="post-content">
								<p class="post-date">
									<FormattedDate date={post.data.pubDate} />
								</p>
								<h3>{post.data.title}</h3>
								<p class="post-description">{post.data.description}</p>
							</div>
						</a>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 1000px;
	}

	.page-header {
		margin-bottom: 3rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid rgba(15, 23, 42, 0.08);
	}

	.page-header h1 {
		font-size: 3rem;
		margin-bottom: 0.5rem;
	}

	.page-description {
		font-size: 1.125rem;
		color: var(--text-secondary);
		max-width: 600px;
	}

	/* Featured Post */
	.featured-section {
		margin-bottom: 4rem;
	}

	.featured-post {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2.5rem;
		padding: 1.5rem;
		background: white;
		border: 1px solid rgba(15, 23, 42, 0.08);
		border-radius: var(--radius-xl);
		text-decoration: none;
		transition: all var(--duration-normal) var(--ease-out);
	}

	.featured-post:hover {
		border-color: var(--amber);
		box-shadow: var(--shadow-lg), 0 0 0 4px var(--amber-glow);
		transform: translateY(-4px);
	}

	.featured-image {
		border-radius: var(--radius-lg);
		overflow: hidden;
	}

	.featured-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: var(--radius-lg);
	}

	.featured-content {
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 1rem 0;
	}

	.featured-badge {
		display: inline-block;
		width: fit-content;
		padding: 0.375rem 0.75rem;
		background: var(--amber-glow);
		color: var(--amber-dark);
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		border-radius: var(--radius-full);
		margin-bottom: 1rem;
	}

	.featured-content h2 {
		font-size: 1.75rem;
		margin-bottom: 0.5rem;
		color: var(--ink);
		line-height: 1.3;
	}

	.featured-date {
		font-size: 0.875rem;
		color: var(--text-muted);
		margin-bottom: 1rem;
	}

	.featured-description {
		color: var(--text-secondary);
		margin-bottom: 1.5rem;
		line-height: 1.6;
	}

	.read-more {
		font-weight: 600;
		color: var(--amber-dark);
	}

	/* Posts Grid */
	.posts-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1.5rem;
	}

	.post-card {
		display: flex;
		flex-direction: column;
		background: white;
		border: 1px solid rgba(15, 23, 42, 0.08);
		border-radius: var(--radius-lg);
		overflow: hidden;
		text-decoration: none;
		transition: all var(--duration-fast) var(--ease-out);
	}

	.post-card:hover {
		border-color: rgba(15, 23, 42, 0.15);
		box-shadow: var(--shadow-md);
		transform: translateY(-2px);
	}

	.post-image {
		aspect-ratio: 2 / 1;
		overflow: hidden;
	}

	.post-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform var(--duration-normal) var(--ease-out);
	}

	.post-card:hover .post-image img {
		transform: scale(1.03);
	}

	.post-content {
		padding: 1.5rem;
	}

	.post-date {
		font-size: 0.8125rem;
		color: var(--text-muted);
		margin-bottom: 0.5rem;
	}

	.post-card h3 {
		font-size: 1.125rem;
		font-family: 'Source Sans 3', sans-serif;
		font-weight: 600;
		margin-bottom: 0.5rem;
		color: var(--ink);
		line-height: 1.4;
	}

	.post-description {
		font-size: 0.9375rem;
		color: var(--text-secondary);
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.page-header h1 {
			font-size: 2.5rem;
		}

		.featured-post {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.featured-content h2 {
			font-size: 1.5rem;
		}

		.posts-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
