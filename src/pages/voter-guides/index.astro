---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';

const elections = await getCollection('elections');
const sortedElections = elections.sort(
	(a, b) => new Date(b.data.electionDate).getTime() - new Date(a.data.electionDate).getTime()
);
---

<html lang="en">
	<head>
		<BaseHead title="Voter Guides" description="My recommendations for elections past and present." />
	</head>
	<body>
		<Header />
		<main>
			<header class="page-header">
				<h1>Voter guides</h1>
				<p>My recommendations for elections past and present.</p>
			</header>

			<ul class="election-list">
				{sortedElections.map((election) => {
					const slug = election.id.replace('/index', '');
					return (
						<li>
							<a href={`/voter-guides/${slug}/`} class="election-card">
								<div class="election-info">
									<span class="location">{election.data.location}</span>
									<h2>{election.data.title}</h2>
									<p>{election.data.description}</p>
								</div>
								<div class="election-date">
									<FormattedDate date={election.data.electionDate} />
								</div>
							</a>
						</li>
					);
				})}
			</ul>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 800px;
		margin: 0 auto;
		padding: var(--space-xl) var(--space-lg);
	}

	.page-header {
		margin-bottom: 3rem;
		text-align: center;
	}

	.page-header h1 {
		font-size: 2.75rem;
		margin-bottom: 0.5rem;
	}

	.page-header p {
		color: var(--text-secondary);
		font-size: 1.25rem;
	}

	.election-list {
		list-style: none;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.election-card {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1.5rem;
		background: white;
		border: 1px solid rgba(15, 23, 42, 0.08);
		border-radius: var(--radius-lg);
		text-decoration: none;
		transition: all var(--duration-fast) var(--ease-out);
	}

	.election-card:hover {
		border-color: var(--amber);
		box-shadow: var(--shadow-md);
		transform: translateY(-2px);
	}

	.election-info {
		flex: 1;
	}

	.location {
		font-size: 0.75rem;
		font-weight: 600;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		color: var(--amber-dark);
	}

	.election-info h2 {
		font-size: 1.25rem;
		margin: 0.25rem 0 0.5rem;
		color: var(--ink);
	}

	.election-info p {
		font-size: 0.9375rem;
		color: var(--text-secondary);
		margin: 0;
	}

	.election-date {
		font-size: 0.875rem;
		color: var(--text-muted);
		white-space: nowrap;
		margin-left: 1rem;
	}

	@media (max-width: 640px) {
		.election-card {
			flex-direction: column;
			align-items: flex-start;
		}

		.election-date {
			margin-left: 0;
			margin-top: 1rem;
		}
	}
</style>
